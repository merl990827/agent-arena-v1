{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [{"name": "next"}],
    "paths": {"@/*": ["./*"]},
    "target": "ES2020"
  },
  "include": [
    "next-env.d.ts", 
    "app/**/*.ts", 
    "app/**/*.tsx", 
    "public/**/*.ts", 
    "public/**/*.tsx", 
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
